{
  "database": {
    "rules": "database.rules.json"
  },
  "firestore": {
    "rules": "firestore.rules",
    "indexes": "firestore.indexes.json"
  },
  "functions": {
    "predeploy": [
      "npm --prefix \"$RESOURCE_DIR\" run lint",
      "npm --prefix \"$RESOURCE_DIR\" run build"
    ]
  },
  "hosting": {
    "public": "dist",
    "ignore": [
      "firebase.json",
      "**/.*",
      "**/node_modules/**"
    ],
    "rewrites": [
      { "source": "**", "function": "api" },
      { "source": "**/*.css", "content-type": "text/css" }
    ]
  },
  "storage": {
    "rules": "storage.rules"
  },
  "emulators": {
    "functions": {
      "port": 10091
    },
    "firestore": {
      "port": 10020
    },
    "database": {
      "port": 10030
    },
    "hosting": {
      "port": 10040
    },
    "pubsub": {
      "port": 10050
    },
    "ui": {
      "enabled": true,
      "port": 10000
    }
  }
}
